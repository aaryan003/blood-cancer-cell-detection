generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())

  hospital   Hospital? @relation(fields: [hospitalId], references: [id])
  hospitalId String?

  uploads    Upload[]
  auditLogs  AuditLog[]
}

enum Role {
  ADMIN
  DOCTOR
  LAB_TECH
  HOSPITAL
}

model Hospital {
  id        String   @id @default(uuid())
  name      String
  address   String
  createdAt DateTime @default(now())

  users     User[]
  patients  Patient[]
}

model Patient {
  id        String   @id @default(uuid())
  name      String
  age       Int
  gender    Gender
  createdAt DateTime @default(now())

  hospital   Hospital @relation(fields: [hospitalId], references: [id])
  hospitalId String

  reports    Report[]
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Report {
  id          String   @id @default(uuid())
  sampleId    String   @unique
  reportUrl   String
  createdAt   DateTime @default(now())

  patient     Patient @relation(fields: [patientId], references: [id])
  patientId   String

  uploads     Upload[]
  diagnosis   Diagnosis?
}

model Upload {
  id          String   @id @default(uuid())
  imageUrl    String
  fileHash    String
  uploadedAt  DateTime @default(now())

  uploadedBy  User   @relation(fields: [userId], references: [id])
  userId      String

  report      Report @relation(fields: [reportId], references: [id])
  reportId    String
}

model Diagnosis {
  id          String   @id @default(uuid())
  result      String
  confidence  Float
  metadata    Json
  createdAt   DateTime @default(now())

  report      Report @relation(fields: [reportId], references: [id])
  reportId    String   @unique
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  ipAddress String
  createdAt DateTime @default(now())

  user      User   @relation(fields: [userId], references: [id])
  userId    String
}
